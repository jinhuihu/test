<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码识别助手"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 状态显示 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务未启动"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="12dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp" />

    <!-- 功能说明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能说明：\n• 自动识别九宫格验证码\n• 支持飞机、汽车等物体识别\n• 自动点击正确图片\n• 自动点击验证按钮"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp" />

    <!-- 使用步骤 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用步骤：\n1. 点击下方按钮启动服务\n2. 在无障碍设置中启用本应用\n3. 打开需要验证的网页\n4. 等待自动识别和点击"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="24dp" />

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启动服务"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#4CAF50"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止服务"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- 权限设置按钮 -->
    <Button
        android:id="@+id/btn_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开无障碍设置"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="#2196F3"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- 日志显示 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日志信息将显示在这里...\n"
            android:textSize="12sp"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:background="#ffffff" />

    </ScrollView>

</LinearLayout>
